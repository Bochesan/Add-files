.files
  box-sizing: border-box;
  margin-bottom: 30px;
  background: rgba(0,0,0,0.4);
  padding: 15px;

  &__area
    background: rgba(255,255,255,0.7);
    padding: 15px;
    margin-bottom: 10px;

  &__button
    display: inline-block;
    cursor: pointer;
    padding: 15px;
    color: white;
    background: rgba(0,0,0,0.5);
    user-select: none;

 .file-line
    display: flex;
    align-items: center;
    margin-bottom: 10px;

    &:last-child
      margin-bottom: 0;

    &__name
      cursor: pointer;

    &__close
      margin-left: 15px;
      transform: rotate(45deg);
      cursor: pointer;
